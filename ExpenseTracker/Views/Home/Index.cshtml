@{
    ViewData["Title"] = "Home Page";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <div class="d-flex flex-row justify-content-between align-items-center">
        <h3>Total Expenses: £@ViewBag.Expenses</h3>
        <a asp-controller="Home" asp-action="CreateEditExpense" class="btn btn-primary">Add New Expense</a>
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Price</td>
                    <td>@expense.Description</td>
                    <td>
                        <a asp-action="CreateEditExpense" asp-route-id="@expense.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
